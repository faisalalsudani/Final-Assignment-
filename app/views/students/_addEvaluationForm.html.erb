<!-- Button trigger modal -->
<button type="button" class="btn btn-primary add-student" data-toggle="modal" data-target="#addstudent">
Add new evaluation
</button>

<!-- Modal -->
<%= form_for [@student, @student.evaluations.new] do |f|  %>
<div class="modal fade" id="addstudent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add new evaluation - <%= Date.today %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

          <div class="field">
             <%= f.label :remarks %><br>
             <%= f.text_field :remarks, class: "form-control student_title" %>
          </div>

          <div class="field">
             <%= f.label :date %><br>
             <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d'), class: "form-control student_title" %>
          </div>

          <div class="field" class="checkbox-inline">
            <%= f.check_box :green %>
            <%= f.label :green, "Green", class: "green" %><br>
            <%= f.check_box :yellow %>
            <%= f.label :yellow, "Yellow", class: "yellow" %><br>
            <%= f.check_box :red %>
            <%= f.label :red, "Red", class: "red" %>
         </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Save", class: "btn btn-primary", id: "evaluation" %>
        <%= f.submit "Save and next student", class: "btn btn-primary", name: "save_next" %>
      </div>
    </div>
  </div>
</div>
<% end %>
